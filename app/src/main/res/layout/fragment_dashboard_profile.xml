<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashboard_profile"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/gradiantblue"
    android:elevation="5dp"
    android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/bungee"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="26sp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="90dp"
        android:layout_height="180dp"
        android:elevation="10dp"
        android:id="@+id/whitecardviewonprofiletab"
        android:orientation="vertical"
        android:background="@drawable/whitedencecardboard" >
<androidx.cardview.widget.CardView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:elevation="10dp"
    app:cardCornerRadius="50dp"
    >

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scaleType="centerCrop"
    android:src="@drawable/profileonprofiletab"/>



</androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:fontFamily="@font/antic"
            android:id="@+id/usernameonprofiletab"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/whitecardviewonprofiletab">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:clickable="false"
        android:drawableEnd="@drawable/ic_user"
        android:background="@drawable/gradiantyellowgreen"
        android:fontFamily="@font/bungee"
        android:text="Bus Pass  " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameonprofiletab"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat"
        android:text="Name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameonprofiletab2"
        android:layout_below="@+id/editablename"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat"
        android:text="Username"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/branch"
        android:layout_below="@+id/usernameonprofiletab2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat"
        android:text="Branch"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stand"
        android:layout_below="@+id/branch"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat"
        android:text="Stand"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactnumber"
        android:layout_below="@+id/stand"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat"
        android:text="Contact"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/busroute"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/contactnumber"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:text="Bus route"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/year"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/busroute"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:text="Year"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pendingfees"
        android:layout_below="@+id/year"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:text="Pending fees"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp" />


            <TextView
                android:id="@+id/editablename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginStart="100dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/montserrat"
                android:text=": "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
        android:id="@+id/usernameedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/editablename"
        android:layout_marginStart="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat"
        android:text=": "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

<TextView
        android:id="@+id/branchedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/usernameedit"
        android:layout_marginStart="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat"
        android:text=": "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

<TextView
        android:id="@+id/standedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/branchedit"
        android:layout_marginStart="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat"
        android:text=": "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

<TextView
        android:id="@+id/contactedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/standedit"
        android:layout_marginStart="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
    android:autoLink="phone"
    android:textColorLink="@color/blue"
        android:fontFamily="@font/montserrat"
        android:text=": "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

<TextView
        android:id="@+id/busrouteedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/contactedit"
        android:layout_marginStart="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat"
        android:text=": "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/yearedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/busroute"
        android:layout_marginStart="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat"
        android:text=": "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

<TextView
        android:id="@+id/pendingfeesedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/yearedit"
        android:layout_marginStart="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat"
        android:text=": "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/logoutonprofile"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/bungee"
        android:layout_below="@+id/pendingfeesedit"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/curvegradiantblue"
        android:text="Logout" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_below="@id/logoutonprofile"
                android:src="@drawable/whitepng" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>